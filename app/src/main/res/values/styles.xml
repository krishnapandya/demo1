<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EditTextStyle" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/colorTextRed</item>
        <item name="android:textColor">@color/colorTextRed</item>
    </style>

    <style name="DrawerItem">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextRed</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="ButtonRedStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorDarkYellow</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
